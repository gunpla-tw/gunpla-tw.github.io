@import "bourbon"

.hero
  display: inline-block
  color: #fff
  background: rgba(0,0,0, 0.5)
  padding: 70px 100px 80px
  vertical-align: middle
  position: relative
  box-shadow: 0 1px 5px rgba(0,0,0, 0.7)
  h1
    font-size: 42px
    text-shadow: 0 2px 5px rgba(0,0,0, .8)
  h3
    text-shadow: 0 2px 5px rgba(0,0,0, .8)
  .gbg
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
  .bg-front
    z-index: -1
    background: rgba(50,50,50, .3)

  .bg-back
    z-index: -2
    background: url(<%= asset_path 'zaku.jpg' %>)
    background-size: cover
    opacity: 0.5

.site
  &:before
    content: " "
    display: inline-block
    height: 85%
    vertical-align: middle

