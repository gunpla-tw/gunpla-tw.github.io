@import "bourbon"

body
  background: #fef9ec
  height: 100%

.header
  +clearfix
  box-sizing: border-box
  position: relative
  text-align: left
  padding: 0 35px
  background: #5B5E63
  font-size: 24px
  .title
    margin: 0
    padding: 10px 15px
    background: #07ABD4
    font-style: normal
    font-weight: 200
    a
      color: white
      text-decoration: none
      text-shadow: 0px 2px 2px rgba(0,0,0, .7)
      &:hover
        text-decoration: underline
  &:before
    position: absolute
    content: ' '
    display: block
    height: 2px
    width: 100%
    left: 0
    top: 100%
    +background(linear-gradient(rgba(0,0,0, .5), rgba(0,0,0, .3)))
    z-index: 3
  ul.menu
    float: right
    margin-right: 120px
    li
      padding: 10px 0
      display: inline-block

.site
  background: #FEF9EC

.hero
  display: inline-block
  text-align: left
  color: #fff
  background: rgba(0,0,0, 0.3)
  padding: 70px 35px 80px
  vertical-align: middle
  position: relative
  box-shadow: 0 1px 5px rgba(0,0,0, 0.7)
  width: 100%
  box-sizing: border-box
  height: 500px
  z-index: 2
  h1, h3
    opacity: 0.7
  h1
    font-size: 42px
    text-shadow: 0 2px 5px rgba(0,0,0, .8)
  h3
    display: none
    text-shadow: 0 2px 5px rgba(0,0,0, .8)
  .gbg
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
  .bg-front
    z-index: -1
    background: rgba(0,0,0, .7)

  .bg-back
    z-index: -2
    background: url(<%= asset_path 'zaku.jpg' %>) #000 no-repeat
    background-size: cover
    background-attachment: fixed
    background-position: 0 -100px

.footer
  .contact
    a
      text-decoration: none
      color: #666
